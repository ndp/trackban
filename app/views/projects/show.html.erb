  <section id='m.group' ng-repeat='m in hier.values'>
    <h3 id="{{m.group}}-hd">{{milestoneName(m.group)}}</h3>
    <section id='e.group' ng-repeat='e in m.values'>
      <h2 id="{{e.group}}-hd">{{e.group}}</h2>
      <article id='th.group' ng-repeat='th in e.values'>
        <h3 id="{{th.group}}-hd">{{th.group}}</h3>

        <div ng-repeat="story in th.values">
